{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-o",
                "${workspaceFolder}/mycode",
                "${workspaceFolder}/mycode.cpp",
                "-I/usr/include/x86_64-linux-gnu/c++/11",
                "-I/usr/include/llvm-14",
                "-I/usr/include/c++/11",
                "-I/usr/include/llvm-c-14",
                "-lLLVM-14",
                "-g",
                "-O0"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/include/x86_64-linux-gnu/c++/11",
                "-I/usr/include/llvm-14",
                "-I/usr/include/c++/11",
                "-I/usr/include/llvm-c-14",
                "-lLLVM-14"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}